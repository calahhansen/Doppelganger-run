            <br>
            <a href="tasks/{{this.id}}">{{this.category}}</a>
            <br>
            <a href="tasks/{{this.id}}">{{this.city}}</a>
            <br></br>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          <br>
          {{/each}}
        </ul>
