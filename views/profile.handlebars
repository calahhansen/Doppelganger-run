  <div class="container">
      <!-- Update Profile Modal -->
        <div id="updateProfileModal">
          <!-- Update Profile Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Update Profile Form</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
              <form class="clearfix mb-4" action="POST">
                <div class="form-group">
                  <label for="name">Link to Photo Image (required for image)</label>
                  <input id="photo" type="text" class="validate"
                    placeholder="Example: https://images.app.goo.gl/8fEd9uGx91SDogkg9">
                </div>
                <div class="form-group">
                  <label for="name">First name</label>
                  <input type="text" id="firstname" class="form-control" aria-describedby="name"
                    placeholder="Enter first name">
                </div>
                <div class="form-group">
                  <label for="name">Last name</label>
                  <input type="text" id="lastname" class="form-control" aria-describedby="name"
                    placeholder="Enter last name">
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="inputCity">City</label>
                  </div>
                  <div class="form-group col-md-4">
                    <label for="inputState">State</label>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputSkill">Let us know your skills</label>
                  <textarea type="text" class="form-control" id="inputSkill" placeholder="Skills"></textarea>
                </div>
                <div class="form-group">
                  <label for="inputTask">What type of task are you looking for?</label>
                  <textarea type="text" class="form-control" id="inputTask" placeholder="Tasks"></textarea>
                </div>

                <button id="submit" class="btn btn-success float-right">Submit</button>
              </form>
            </div>
          </div>
        </div>
        <!-- Trigger the Register modal with a button -->
                <form>
                <button type="button" id="updateBtn" class="btn btn-success btn-md">Update Profile</button>
                </form>
    <div class="row">
